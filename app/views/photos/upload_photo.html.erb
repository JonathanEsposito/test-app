
<% form_for :photo, :html => {:multipart => true} do |form| %>
  <table cellpadding="0" cellspacing="20px" border="0">
  <tr><td>Photo: </td><td colspan="2"><%= form.file_field :file, :size => 20 %></td></tr>
  <tr><td>Name: </td><td colspan="2"><%= form.text_field :name, :size => 20, :maxlength => 20 %></td></tr>
  <tr><td>Album: </td><td><%= form.select :album, options_from_collection_for_select(@albums, :id, :title, @photo.album) %>
                 </td><td><%= submit_tag "Add Ablum", :class => "submit", :name => "add_album" %></td></tr>
  </table>
  <%= submit_tag "Upload Photo", :class => "submit" %>
  <br />
<% end %>